<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="244dp"
        android:layout_height="245dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/stud" />

    <Button
        android:id="@+id/addStudentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="30dp"


        android:background="@color/colorAccent"
        android:text="Add Student sheet" />



    <Button
        android:id="@+id/placementBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addStudentBtn"
        android:layout_marginTop="30dp"

        android:background="@color/colorAccent"
        android:text="Placement Predictor" />


    <Button
        android:id="@+id/addFacultyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placementBtn"
        android:layout_marginTop="30dp"

        android:background="@color/colorAccent"
        android:text="Salary Predictor" />

    <Button
        android:id="@+id/JobRecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addFacultyBtn"
        android:layout_marginTop="30dp"

        android:background="@color/colorAccent"
        android:text="Job Recommendation" />




    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/JobRecommendation"
        android:layout_marginTop="30dp"

        android:background="@color/colorAccent"
        android:text="Logout" />


</RelativeLayout>